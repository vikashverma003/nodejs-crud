<%- include('header') %>

<div class="container">
  <h2 style="text-align:center">Add Category</h2>
  <div class="panel-body">       
   
  <form class="form-horizontal" action="/routes/password-category/" method="POST">
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Category Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="catname" placeholder="enter the Category" name="catname">
      </div>
      <%if(error!=''){%>
       <p style="text-align:center;color:red;"><%=error.catname.msg%></p>
        <%}%>
        <%if(success!=''){%>
          <p style="text-align:center;color:green;"><%=success%> </p>
           <%}%>
    </div>
       <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Password:</label>
      <div class="col-sm-10">          
        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd">
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>
</div>
<%- include('footer') %>